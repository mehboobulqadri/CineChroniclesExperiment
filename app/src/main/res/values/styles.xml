<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/charcoal</item>
        <item name="android:statusBarColor">@color/black</item>

        <!-- Text colors for better readability -->
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/silver</item>
        <item name="android:textColorHint">@color/light_gray</item>

        <!-- EditText cursor color -->
        <item name="colorControlActivated">@color/crimson_red</item>
        <item name="android:textCursorDrawable">@drawable/cursor_red</item>

        <!-- Material components customization -->
        <item name="materialCardViewStyle">@style/Widget.App.CardView</item>
        <item name="textInputStyle">@style/Widget.App.TextInputLayout</item>
        <item name="materialButtonStyle">@style/Widget.App.Button</item>
    </style>

    <style name="Widget.App.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">#FFFFFF</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">4dp</item>
    </style>

    <style name="Widget.App.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">#F5F5F5</item>
        <item name="boxStrokeColor">@color/crimson_red</item>
        <item name="hintTextColor">@color/dark_gray</item>
        <item name="android:textColorHint">@color/dark_gray</item>
    </style>

    <style name="Widget.App.Button" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/crimson_red</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">8dp</item>
    </style>
</resources>
