<resources>
    <!-- Dark theme specific styles -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/charcoal</item>
        <item name="android:statusBarColor">@color/black</item>

        <!-- Text colors for better readability in dark mode -->
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/silver</item>
        <item name="android:textColorHint">@color/light_gray</item>

        <!-- EditText cursor color -->
        <item name="colorControlActivated">@color/gold</item>
        <item name="android:textCursorDrawable">@drawable/cursor_gold</item>

        <!-- Material components customization -->
        <item name="materialCardViewStyle">@style/Widget.App.CardView.Dark</item>
        <item name="textInputStyle">@style/Widget.App.TextInputLayout.Dark</item>
        <item name="materialButtonStyle">@style/Widget.App.Button.Dark</item>
    </style>

    <style name="Widget.App.CardView.Dark" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">#1F1F1F</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">4dp</item>
    </style>

    <style name="Widget.App.TextInputLayout.Dark" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">#1F1F1F</item>
        <item name="boxStrokeColor">@color/gold</item>
        <item name="hintTextColor">@color/silver</item>
        <item name="android:textColorHint">@color/silver</item>
    </style>

    <style name="Widget.App.Button.Dark" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/crimson_red</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">8dp</item>
    </style>
</resources>
